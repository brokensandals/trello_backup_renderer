<!doctype html>
<html>
<head>
  <meta charset="UTF-8"/>
</head>
<body>

<ul class="lists">
  <% lists.each do |list| %>
    <li class="list">
      <h1 class="list-name"><%= list.name %></h1>

      <ul class="cards">
        <% list.cards.each do |card| %>
          <li class="card">
            <% if card.cover_attachment %>
              <img class="card-cover" src="<%= card.cover_attachment.path %>"/>
            <% end %>

            <h2 class="card-name"><%= card.name %></h2>

            <% if card.labels.any? %>
              <ul class="labels">
                <% card.labels.each do |label| %>
                  <li class="label"><span font-color="<%= label.color %>"><%= label.name %></span></li>
                <% end %>
              </ul>
            <% end %>

            <% if card.desc %>
              <p class="card-desc"><%= card.desc %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </li>
<% end %>
</ul>

</body>
</html>